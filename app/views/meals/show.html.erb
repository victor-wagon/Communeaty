<div class="container">
  <div class="row mt-2">
    <div class="col-md-12">
      <h2><%= @meal.title %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6" id="host_info">
      <p><%= "Rating | Hosting_Frequency | Address"%></p>
    </div>
    <div class="col-md-6 text-right" id= "host_info">
      <p> <%= "Share | Save" %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="carousel slide" id="carouselExampleIndicators" data-ride="carousel" >
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
          <% @meal.images.each_with_index do |meal, index| %>
            <% if index == 0 %>
              <div class="carousel-item active">
                <div class="d-block w-100" style="height: 60vh; background-image:url(<%= rails_blob_url(meal) %>); background-repeat: no-repeat; background-size: 100% 100%; background-position: center;"></div>
              </div>
            <% else %>
              <div class="carousel-item">
                <div class="d-block w-100" style="height: 60vh; background-image:url(<%= rails_blob_url(meal) %>); background-repeat: no-repeat; background-size: 100% 100%; background-position: center;"></div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row"></div>
  <div class="row"></div>
</div>
