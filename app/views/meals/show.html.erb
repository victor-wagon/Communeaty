<div class="container">
  <div class="row mt-2">
    <div class="col-md-12">
      <h2><%= @meal.title %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6" id="host_info">
      <p><%= "Rating | Hosting_Frequency | Address"%></p>
    </div>
    <div class="col-md-6 text-right" id= "host_info">
      <p> <%= "Share | Save" %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2 d-flex justify-content-center">
      <div id="carouselFadeExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel" style="width: 20vw">
        <div class="carousel-inner border" role="listbox">
          <% @meal.images.each_with_index do |meal, index| %>
            <% if index == 0 %>
              <div class="carousel-item active">
                <%= image_tag(meal, class: "d-block w-100 h-100")%>
              </div>
            <% else %>
              <div class="carousel-item">
                <%= image_tag(meal, class: "d-block w-100 h-100")%>
              </div>
            <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselFadeExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselFadeExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div><%= image_tag(@meal.images[1])%></div>


    </div>
  </div>
  <div class="row"></div>
  <div class="row"></div>
</div>
